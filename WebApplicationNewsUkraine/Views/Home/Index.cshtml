@using WebApplicationNewsUkraine.Models
@model IEnumerable<PravdaModel>

<table cellpadding="0" cellspacing="0">
        <tr>
            <th>Дата</th>
            <th>Новини</th>
        </tr>
        @foreach (PravdaModel pravda in Model)
        {
            <tr>
                <td>@pravda.Date</td>
                <td>
                    <h1>@pravda.Title</h1>
                    @pravda.Description
                </td>
            </tr>
        }
</table>
